# Включаем mod_rewrite
ErrorDocument 404 /index.php?page=404

Options +FollowSymLinks

RewriteEngine On
RewriteBase /

# если REQUEST_FILENAME не является файлом
RewriteCond %{REQUEST_FILENAME} !-f

# и не директория т.е. папка
RewriteCond %{REQUEST_FILENAME} !-d

RewriteCond user/([a-z0-9]+)/%{QUERY_STRING} lang=(.+)
RewriteRule ^user/([a-z0-9]+)/$ index.php?page=user&login=$1&lang=%1

RewriteRule ^user/([a-z0-9]+)/$  /index.php?page=user&login=$1

RewriteRule ^([^/]+)/$  /index.php?page=$1
RewriteRule ^([^/]+)/([0-9]*)/$  /index.php?page=$1&id=$2